<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screen.ui.fragment.home.fragment.CommentsFragment">

    <TextView
        android:id="@+id/some_id"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"

        android:layout_alignParentTop="true"
        android:text="@string/names_course"
        android:textAppearance="@style/large_text_style"
        android:gravity="center_horizontal|top"
        android:fontFamily="@font/pattaya"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ImageView
        android:id="@+id/user_photo_comments"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_alignParentTop="true"
       app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/user_photo"
        />

    <EditText
        android:id="@+id/share_edit_comments"
        android:layout_width="219dp"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="19dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="577dp"
        android:background="@drawable/circle_background"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/user_photo_comments"
        />

    <TextView
        android:id="@+id/share_txt_comments"
        android:layout_width="82dp"
        android:layout_height="19dp"
        android:layout_alignParentLeft="true"

        android:layout_alignParentTop="true"
        android:layout_marginBottom="10sp"
        android:text="@string/share"
        android:textAppearance="@style/normal_text_style"
        android:gravity="center_horizontal|top"
         android:fontFamily="@font/pattaya"
        app:layout_constraintBottom_toBottomOf="@id/share_edit_comments"
        app:layout_constraintLeft_toRightOf="@id/share_edit_comments"
        />
</androidx.constraintlayout.widget.ConstraintLayout>