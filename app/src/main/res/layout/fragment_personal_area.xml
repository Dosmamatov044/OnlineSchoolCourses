<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screen.ui.fragment.personalArea.PersonalAreaFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_photo_"
        android:layout_width="80dp"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/user_photo"
        />

    <TextView
        android:id="@+id/dosmamatov"
        android:layout_width="75dp"
        android:layout_height="18dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="124dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:text="@string/my_name"
        android:textAppearance="@style/normal_text_style"
        android:gravity="top"
        android:fontFamily="@font/pattaya"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <TextView
        android:id="@+id/some_id"
        android:layout_width="80dp"
        android:layout_height="19dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="155dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:text="@string/profession_names"
        android:textAppearance="@style/normal_text_style"
        android:gravity="top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/pattaya"
        />

    <TextView
        android:id="@+id/base"
        android:layout_width="110dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:text="@string/base"
        android:textAppearance="@style/medium_large_text_style"
        android:gravity="top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/pattaya"
        />
    <ImageView
        android:id="@+id/updateUserInfo"
        android:layout_width="30dp"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="309dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="126dp"
       android:src="@drawable/editabout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/myCourse_id"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="136dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:text="@string/my_course"
        android:textAppearance="@style/large_text_style"
        android:gravity="top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/pattaya"
        />


    <ImageView
        android:id="@+id/add_course"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="294dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="500dp"
        android:background="@drawable/add_course"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/updateUserInfo"
        android:layout_marginTop="30sp"
        android:id="@+id/recyclerView"
        />
</androidx.constraintlayout.widget.ConstraintLayout>