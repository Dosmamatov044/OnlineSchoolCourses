<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<EditText
    android:id="@+id/email_edit_authorization"
    android:layout_width="240dp"
    android:layout_height="40dp"


    android:layout_alignParentTop="true"
    android:layout_marginTop="173dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:background="@drawable/square_background"
    />


    <ImageView
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:src="@drawable/message"
   android:layout_marginEnd="40sp"
        app:layout_constraintRight_toLeftOf="@id/email_edit_authorization"
        app:layout_constraintTop_toTopOf="@id/email_edit_authorization"
        app:layout_constraintBottom_toBottomOf="@id/email_edit_authorization"
        />

    <EditText
        android:id="@+id/password_edit_authorization"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginTop="304dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/square_background"
        />



    <ImageView
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:src="@drawable/lock"
        android:layout_marginStart="15sp"
        android:layout_marginBottom="90sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

     <androidx.appcompat.widget.AppCompatButton
         android:id="@+id/entry_btn_authorization"
         android:layout_width="190dp"
         android:layout_height="38sp"
          app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         android:layout_marginTop="140sp"
         android:background="@color/light_red"
        android:text="@string/enter"
        style="@style/button_text_style"

         />

    <TextView
        android:id="@+id/forgetPassword_txt_authorization"
        android:layout_width="120dp"
        android:layout_height="17dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/open_sans"
        android:gravity="top"
        android:text="@string/forget_password"
        android:textAppearance="@style/normal_text_style"
        app:layout_constraintLeft_toLeftOf="parent"


        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/entry_btn_authorization" />


    <ImageView
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:src="@drawable/google_image"
        app:layout_constraintTop_toBottomOf="@id/forgetPassword_txt_authorization"
         app:layout_constraintLeft_toLeftOf="@id/forgetPassword_txt_authorization"
        app:layout_constraintRight_toRightOf="@id/forgetPassword_txt_authorization"
        android:layout_marginTop="40sp"
        />
    <TextView
        android:id="@+id/first_entry_txt_authorization"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:text="@string/your_first_entry"
        android:textAppearance="@style/normal_text_style"
        android:gravity="top"
      app:layout_constraintBottom_toTopOf="@id/register_text_authorization"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />
    <TextView
        android:id="@+id/register_text_authorization"
        android:layout_width="120dp"
        android:layout_height="18dp"
        android:text="@string/register"
        android:textAppearance="@style/normal_text_style"
       android:layout_marginBottom="20sp"
        android:layout_marginEnd="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>