<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.register.fragment.changePassword.ChangePasswordFragment">

    <EditText
        android:id="@+id/password_edit_changePassword"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="223dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/square_background"
        />
    <TextView
        android:id="@+id/password_id"
        android:layout_width="wrap_content"
        android:layout_height="25dp"

        android:layout_alignParentTop="true"

        android:fontFamily="@font/pattaya"
        android:gravity="top"
        android:text="@string/password"
        android:textAppearance="@style/medium_large_text_style"
        app:layout_constraintBottom_toBottomOf="@id/password_edit_changePassword"
        app:layout_constraintRight_toLeftOf="@id/password_edit_changePassword"
        app:layout_constraintTop_toTopOf="@id/password_edit_changePassword"
        android:layout_marginEnd="15sp"
        />

    <EditText
        android:id="@+id/confirmPassword_edit_changePassword"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="293dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/square_background"
        />
    <TextView
        android:id="@+id/confirmPassword_id"
        android:layout_width="60sp"
        android:layout_height="40dp"

        android:layout_alignParentTop="true"

        android:fontFamily="@font/pattaya"
        android:gravity="top"
        android:text="@string/confirm_password"
        android:textAppearance="@style/medium_large_text_style"
        app:layout_constraintBottom_toBottomOf="@id/confirmPassword_edit_changePassword"
        app:layout_constraintRight_toLeftOf="@id/confirmPassword_edit_changePassword"
        app:layout_constraintTop_toTopOf="@id/confirmPassword_edit_changePassword"
        android:layout_marginEnd="15sp"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/get_link_btn_register"
        android:layout_width="224dp"
        android:layout_height="37dp"
        android:background="@drawable/rounded_corner_background"
        app:layout_constraintTop_toBottomOf="@id/confirmPassword_edit_changePassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50sp"
        android:text="@string/change_password"
        style="@style/button_text_style"
        />

</androidx.constraintlayout.widget.ConstraintLayout>